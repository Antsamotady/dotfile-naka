set $tsipika_color #ef4f91


#               border       bg      txt     indicator
client.focused  $tsipika_color $bg_color $txt_color  #00015e


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        #font pango:Tex Gyre Cursor 10
        font pango:Bubble One Regular 10
        # Special char available at Ctrl+K <key-combination>
        # key-combination is provided by :digraphs
        separator_symbol ▐ 
        status_command i3status
        # status_command ~/.config/i3/bumblebee-status/bumblebee-status \
        #  -m load date datetime \
        #  -t gruvbox-powerline-light 
        colors {
          background $txt_color
          statusline $bg_color
          separator $tsipika_color
          #focused_workspace #d8733c #dbb85e #241e1e
          focused_workspace $tsipika_color $bg_color $txt_color
        }
}

